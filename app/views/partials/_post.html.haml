.post-container
  .row
    .col-md-2
      = link_to show_user_path(post.user.nickname) do
        - if post.user.profile_picture.attached?
          = image_tag url_for(post.user.profile_picture), alt: 'User Image', class: 'post-user-image'
        - else
          = image_tag 'user_picture.jpg', alt: 'Default Profile Image', class: 'post-user-image'
    .col-md-9
      .post-container
        = link_to "#{post.user.first_name} #{post.user.last_name}", show_user_path(post.user.nickname), class: 'post-link fullname'
        = link_to "@#{post.user.nickname}", show_user_path(current_user.nickname), class: 'post-link'
        .container.post-content
          = link_to post_path(post.id), class: 'sidecard-item' do
            %h5= post.title
            %p= post.body
            - if post.image.attached?
              = image_tag url_for(post.image), alt: 'Post Image', class: 'post-image'
