.container-fluid
  .row
    = render 'partials/sidecard'
    .container.home_exterior_container.justify-content-start
      .col-md-12
      - @users.each_with_index do |user, index|
        .container.user-list-item
          = render partial: 'partials/user', locals: { user: user }
          .container.align-content-center.view-button-container
            = link_to "View Profile", show_user_path(user.nickname), class: 'view_profile_button'
        - unless index == @users.size - 1
          %hr.post-separation
    .container.d-flex.justify-content-center
      = paginate @users
